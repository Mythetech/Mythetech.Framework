@using MudBlazor
@using Mythetech.Framework.Enums
@namespace Mythetech.Framework.Components.Buttons
@inherits MudComponentBase

<MudButton Class="@CombinedClass"
           Style="@Style"
           Variant="@Variant"
           Color="@Color"
           Ripple="false"
           StartIcon="@StartIcon"
           EndIcon="@EndIcon"
           IconSize="@IconSize"
           IconColor="@IconColor"
           Size="@Size"
           Disabled="@Disabled"
           FullWidth="@FullWidth"
           ButtonType="@ButtonType"
           Href="@Href"
           Target="@Target"
           OnClick="@OnClick">
    @if (ChildContent != null)
    {
        @ChildContent
    }
    else
    {
        @Text
    }
</MudButton>